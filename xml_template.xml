<character>
    <metadata>
        <campaign>@CAMPAIGN</campaign>
        <created_data>@CREATED_ON</created_data>
        <player>@player</player>
        <notes>@NOTES</notes>
    </metadata>
    <points>
        <total>@TOTAL_POINTS</total>
        <attributes>@ATTRIBUTE_POINTS</attributes>
        <advantages>@ADVANTAGE_POINTS</advantages>
        <disadvantages>@DISADVANTAGE_POINTS</disadvantages>
        <skills>@SKILL_POINTS</skills>
        <spells>@SPELL_POINTS</spells>
        <earned>@EARNED_POINTS</earned>
        <quirks>@QUIRK_POINTS</quirks>
        <race>@RACE_POINTS</race>
    </points>
    <identity>
        <name>@NAME</name>
        <race>@RACE</race>
        <title>@TITLE</title>
        <religion>@RELIGION</religion>
        <gender>@GENDER</gender>
        <age>@AGE</age>
        <tl>@TL</tl>
        <hand>@HAND</hand>
    </identity>
    <appearance>
        <height>@HEIGHT</height>
        <weight>@WEIGHT</weight>
        <eyes>@EYES</eyes>
        <hair>@HAIR</hair>
        <skin>@SKIN</skin>
        <size>@SIZE</size>
    </appearance>
    <stats>
        <primary>
            <st>@ST</st>
            <dx>@DX</dx>
            <iq>@IQ</iq>
            <ht>@HT</ht>
        </primary>
        <secondary>
            <will>@WILL</will>
            <perception>@PERCEPTION</perception>
            <basic_speed>@BASIC_SPEED</basic_speed>
            <basic_move>@BASIC_MOVE</basic_move>
            <fp>@BASIC_FP</fp>
            <hp>@BASIC_HP</hp>
            <fright_check>@FRIGHT_CHECK</fright_check>
        </secondary>
        <senses>
            <hearing>@HEARING</hearing>
            <taste_smell>@TASTE_SMELL</taste_smell>
            <vision>@VISION</vision>
            <touch>@TOUCH</touch>
        </senses>
        <damage>
            <thrust>@THRUST</thrust>
            <swing>@SWING</swing>
        </damage>
    </stats>
    <tracking>
        <hp>
            <check>
                <name>Full</name>
                <value>@BASIC_HP</value>
            </check>
            <check>
                <name>Reeling</name>
                <value>@REELING</value>
            </check>
            <check>
                <name>Collapse</name>
                <value>@HP_COLLAPSE</value>
            </check>
            <check>
                <name>1st Roll</name>
                <value>@DEATH_CHECK_1</value>
            </check>
            <check>
                <name>2nd Roll</name>
                <value>@DEATH_CHECK_2</value>
            </check>
            <check>
                <name>3rd Roll</name>
                <value>@DEATH_CHECK_3</value>
            </check>
            <check>
                <name>4th Roll</name>
                <value>@DEATH_CHECK_4</value>
            </check>
            <check>
                <name>Dead</name>
                <value>@DEAD</value>
            </check>
        </hp>
        <fp>
            <check>
                <name>Full</name>
                <value>@BASIC_FP</value>
            </check>
            <check>
                <name>Tired</name>
                <value>@TIRED</value>
            </check>
            <check>
                <name>Collapse</name>
                <value>@FP_COLLAPSE</value>
            </check>
            <check>
                <name>Unconscious</name>
                <value>@UNCONSCIOUS</value>
            </check>
        </fp>
    </tracking>
    <traits>
        @ADVANTAGES_LOOP_START
        <trait>
            <depth>@DEPTHx1</depth>
            <name>@DESCRIPTION_PRIMARY</name>
            <description>@DESCRIPTION_NOTES</description>
            <modifiers>@DESCRIPTION_MODIFIER_NOTES</modifiers>
            <points>@POINTS</points>
            <ref>@REF</ref>
        </trait>
        @ADVANTAGES_LOOP_END
    </traits>
    <skills>
        @SKILLS_LOOP_START
        <skill>
            <name>@DESCRIPTION_PRIMARY</name>
            <description>@DESCRIPTION_NOTES</description>
            <modifiers>@DESCRIPTION_MODIFIER_NOTES</modifiers>
            <level>@SL</level>
            <relative_level>@RSL</relative_level>
            <points>@POINTS</points>
            <ref>@REF</ref>
        </skill>
        @SKILLS_LOOP_END
    </skills>
    <spells>
        @SPELLS_LOOP_START
        <spell>
            <name>@DESCRIPTION_PRIMARY</name>
            <description>@DESCRIPTION_NOTES</description>
            <modifiers>@DESCRIPTION_MODIFIER_NOTES</modifiers>
            <class>@CLASS</class>
            <college>@COLLEGE</college>
            <level>@SL</level>
            <relative_level>@RSL</relative_level>
            <points>@POINTS</points>
            <duration>@DURATION</duration>
            <mana_cost>@MANA_COST</mana_cost>
            <mana_maintain>@MANA_MAINTAIN</mana_maintain>
            <cast_time>@TIME_CAST</cast_time>
            <ref>@REF</ref>
        </spell>
        @SPELLS_LOOP_END
    </spells>
    <equipment>
        <value>@CARRIED_VALUE</value>
        <weight>@CARRIED_WEIGHT</weight>
        @EQUIPMENT_LOOP_START
        <item>
            <name>@DESCRIPTION_PRIMARY</name>
            <unit_cost>@COST</unit_cost>
            <unit_weight>@WEIGHT</unit_weight>
            <total_cost>@COST_SUMMARY</total_cost>
            <total_weight>@WEIGHT_SUMMARY</total_weight>
            <quantity>@QTY</quantity>
            <ref>@REF</ref>
            <state>@STATE</state>
        </item>
        @EQUIPMENT_LOOP_END
    </equipment>
    <encumbrance>
        @ENCUMBRANCE_LOOP_START
        <level>
            <name>@LEVEL</name>
            <weight>@MAX_LOAD</weight>
            <dodge>@DODGE</dodge>
            <move>@MOVE</move>
        </level>
        @ENCUMBRANCE_LOOP_END
    </encumbrance>
    <hit_locations>
        @HIT_LOCATION_LOOP_START
        <hit_location>
            <name>@WHERE</name>
            <dr>@DR</dr>
            <penalty>@PENALTY</penalty>
            <roll>@ROLL</roll>
        </hit_location>
        @HIT_LOCATION_LOOP_END
    </hit_locations>
    <attacks>
        <melee>
            @MELEE_LOOP_START
            <attack>
                <description>@DESCRIPTION</description>
                <level>@LEVEL</level>
                <block>@BLOCK</block>
                <damage>@DAMAGE</damage>
                <parry>@PARRY</parry>
                <reach>@REACH</reach>
                <strength>@STRENGTH</strength>
                <usage>@USAGE</usage>
            </attack>
            @MELEE_LOOP_END
        </melee>
        <ranged>
            @RANGED_LOOP_START
            <attack>
                <accuracy>@ACCURACY</accuracy>
                <bulk>@BULK</bulk>
                <damage>@DAMAGE</damage>
                <description>@DESCRIPTION</description>
                <level>@LEVEL</level>
                <range>@RANGE</range>
                <recoil>@RECOIL</recoil>
                <rof>@ROF</rof>
                <shots>@SHOTS</shots>
                <strength>@@STRENGTH</strength>
                <usage>@USAGE</usage>
            </attack>
            @RANGED_LOOP_END
        </ranged>
    </attacks>
</character>
